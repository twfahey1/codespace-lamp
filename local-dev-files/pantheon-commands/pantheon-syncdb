SITE_NAME=$(php <<"EOF"
<?php
$site_data = yaml_parse_file(__DIR__ . "/.devcontainer/local-dev-files/site-config.yml");
echo $site_data['site_name'];
EOF
)
SITE_ENV=$(php <<"EOF"
<?php
$site_data = yaml_parse_file(__DIR__ . "/.devcontainer/local-dev-files/site-config.yml");
echo $site_data['default_environment'];
EOF
)
BACKUP_FOLDER=".devcontainer/local-dev-files/pantheon_db_dumps"
mkdir -p $BACKUP_FOLDER
terminus backup:create ${SITE_NAME}.${SITE_ENV} --element=database
terminus backup:get ${SITE_NAME}.${SITE_ENV} --element=database | xargs curl -o $BACKUP_FOLDER/db.sql.gz
gunzip -fk $BACKUP_FOLDER/db.sql.gz
pantheon-import-local-backup